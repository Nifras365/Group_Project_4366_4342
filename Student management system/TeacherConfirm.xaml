<Window x:Class="Student_management_system.TeacherConfirm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_management_system"
        mc:Ignorable="d"
        Title="TeacherConfirm" Height="450" Width="800" 
        Background="Transparent" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <LinearGradientBrush x:Key="WindowBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#800000" Offset="0"/>
            <GradientStop Color="#FFD700" Offset="0.4"/>
            <GradientStop Color="#8B0000" Offset="0.6"/>
            <GradientStop Color="#FFCC00" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>
    <Border Background="{StaticResource WindowBackgroundBrush}" CornerRadius="30">
    <Grid>
        <Label Content="You are a verified teacher in this institude" Style="{StaticResource LableSub}" 
               FontSize="45" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="allclose" Content="Exit" Style="{StaticResource ButtonM}" 
                Margin="0 200 0 0" Click="allclose_Click"/>
    </Grid>
    </Border>
</Window>
